<html>

<head>

	<title>ticket</title>
	<link rel="stylesheet" href="/css/ticket.css">
</head>

<body>
	<div class="container">

		<div id="page_title">
			<h1>Tickets</h1>

		</div>

		<form action="/countdown">
			<div id="ticket_value">
				<label for="ticket_val">Ticket value</label>

				<input type="text" name="ticket_val" placeholder="Enter # minutes">
			</div>

			<div id="ticket_number">
				<label for="ticket_num">Ticket number</label>

				<input type="text" name="ticket_num" placeholder="Enter # tickets">
			</div>

			<div id="total_ticket">
				<div id="total_text">
					<h3>Total break time</h3>
				</div>

				<div class="box">
					<h2></h2>
				</div>

				<h3>Minutes</h3>


				<div id="save">
					<a href="/Countdown"><input type="submit" class="save_but" value="Save & Go"></a>
				</div>
			</div>

		</form>


	</div>
	<script src="https://code.jquery.com/jquery-3.5.1.min.js"
		integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
	<script src="/js/focus.js"></script>
</body>

</html>